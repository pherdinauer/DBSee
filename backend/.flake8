[flake8]
max-line-length = 88
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    build,
    dist,
    *.egg-info
ignore = 
    # Line too long (handled by black)
    E501,
    # Line break before binary operator
    W503,
    # Blank line contains whitespace
    W293
per-file-ignores =
    __init__.py:F401
    tests/*:S101 